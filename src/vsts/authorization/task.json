{
  "id": "bdaa6c8c-452e-4bb4-a21a-40891488fe0d",
  "name": "certes-authorization",
  "friendlyName": "ACME Authorization",
  "description": "Authorizes identifiers for creating certificates",
  "helpMarkDown": "[More Information](https://github.com/fszlin/certes)",
  "category": "Utility",
  "visibility": [ "Build", "Release" ],
  "author": "",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 0
  },
  "minimumAgentVersion": "2.0.0",
  "demands": [],
  "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
  ],
  "inputs": [
    {
      "name": "acmeAccount",
      "type": "connectedService:CertesAcmeAccount",
      "label": "ACME Account",
      "required": true,
      "helpMarkDown": "Select an ACME account for the authorizations"
    },
    {
      "name": "identifiers",
      "type": "multiLine",
      "label": "Domain Names",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "List of domain names, one per line",
      "properties": {
        "resizable": "true",
        "rows": "10",
        "maxLength": "20000"
      }
    },
    {
      "name": "authorizeMethod",
      "type": "pickList",
      "label": "Authorize Method",
      "defaultValue": "azureDns",
      "required": true,
      "helpMarkDown": "The method to vailidate domain ownership",
      "options": {
        "azureDns": "Azure DNS"
      }
    },
    {
      "name": "azureDnsAccount",
      "type": "connectedService:AzureRM",
      "label": "Azure subscription",
      "required": true,
      "visibleRule": "authorizeMethod = azureDns",
      "helpMarkDown": "Select an Azure resource manager subscription for the DNS"
    },
    {
      "name": "nugetSource",
      "type": "string",
      "label": "NuGet package source",
      "required": false,
      "helpMarkDown": "NuGet package source to load certes",
      "groupName": "advanced"
    },
    {
      "name": "frameworkVersion",
      "type": "pickList",
      "label": "Framework Version",
      "defaultValue": "netcoreapp2.0",
      "required": true,
      "helpMarkDown": "Framework version to run certes CLI",
      "options": {
        "netcoreapp2.0": "netcoreapp2.0",
        "netcoreapp1.1": "netcoreapp1.1",
        "netcoreapp1.0": "netcoreapp1.0"
      },
      "groupName": "advanced"
    },
    {
      "name": "cliVersion",
      "type": "string",
      "label": "Certes CLI Version",
      "required": true,
      "defaultValue": "1.1.4",
      "helpMarkDown": "Certes CLI Version",
      "groupName": "advanced"
    }
  ],
  "instanceNameFormat": "Authorization",
  "execution": {
    "Node": { "target": "AuthorizationTask.js" }
  },
  "messages": {
    "ScriptReturnCode": "Script exited with return code: %d",
    "ScriptFailed": "Script failed with error: %s",
    "AzureSDKNotFound": "Azure CLI 2.x is not installed on this machine."
  }
}
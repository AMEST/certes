{
  "name": "certes-vsts",
  "description": "",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "test": "nyc mocha",
    "nyc-html": "nyc mocha && nyc report --reporter=html",
    "nyc-lcov": "nyc mocha && nyc report --reporter=text-lcov > ../../build/coverage.lcov",
    "tfx-pack": "npm run clean && npm run install-tasks && npm run compile && tfx extension create -r ./ --output-path ../../build/",
    "clean": "rimraf ../../build/*.vsix",
    "compile": "tsc -p ./",
    "install-tasks": "npm run install-authz && npm run install-pfx",
    "install-authz": "cd dist/authz && npm install",
    "install-pfx": "cd dist/pfx && npm install"
  },
  "dependencies": {
    "string-template": "^1.0.0",
    "tldjs": "^2.3.1",
    "vsts-task-lib": "^2.7.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/q": "^1.5.1",
    "@types/string-template": "^1.0.2",
    "@types/tldjs": "^2.3.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "tfx-cli": "^0.4.16",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fszlin/certes.git"
  },
  "nyc": {
    "include": [
      "tasks/*/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  }
}

{
  "manifestVersion": 1,
  "id": "certes",
  "version": "0.1.12",
  "name": "certes",
  "scopes": [
    "vso.build",
    "vso.serviceendpoint"
  ],
  "description": "My extension makes hubs great again",
  "publisher": "certes-3",
  "galleryFlags": [
    "Preview"
  ],
  "icons": {
    "default": "static/images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "demands": [
    "api-version/3.0"
  ],
  "tags": [
    "Sample"
  ],
  "categories": [
    "Build and release"
  ],
  "screenshots": [
    {
      "path": "static/images/screen1.png"
    }
  ],
  "content": {
    "license": {
      "path": "license.md"
    },
    "details": {
      "path": "overview.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/fszlin/certes"
    },
    "support": {
      "uri": "https://github.com/fszlin/certes/issues"
    },
    "issues": {
      "uri": "https://github.com/fszlin/certes/issues"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/fszlin/certes"
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "files": [
    {
      "path": "dist"
    }
  ],
  "contributions": [
    {
      "id": "certes-authz",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "type": "ms.vss-distributed-task.task",
      "properties": {
        "name": "dist/authz"
      }
    },
    {
      "id": "certes-pfx",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "type": "ms.vss-distributed-task.task",
      "properties": {
        "name": "dist/pfx"
      }
    },
    {
      "id": "certes-acme-endpoint",
      "description": "CertesAcmeAuthenticationEndpoint",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": [
        "ms.vss-endpoint.endpoint-types"
      ],
      "properties": {
        "name": "CertesAcmeAccount",
        "displayName": "ACME Account",
        "url": "https://github.com/fszlin/certes",
        "inputDescriptors": [],
        "authenticationSchemes": [
          {
            "type": "ms.vss-endpoint.endpoint-auth-scheme-cert",
            "inputDescriptors": [
              {
                "id": "directoryUri",
                "name": "Directory URI",
                "description": "Enter the ACME directory URI",
                "inputMode": "textbox",
                "isConfidential": false,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                },
                "values": {
                  "inputId": "directoryUri",
                  "isDisabled": false,
                  "defaultValue": "https://acme-v01.api.letsencrypt.org/directory"
                }
              },
              {
                "id": "certificate",
                "name": "Private Key",
                "description": "Enter the private key in the format: -----BEGIN PRIVATE KEY-----\\nYourPrivateKeyHere\\n-----END PRIVATE KEY-----\\n",
                "inputMode": "textarea",
                "isConfidential": true,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                }
              }
            ]
          }
        ],
        "helpMarkDown": "<a href=\"https://github.com/fszlin/certes\" target=\"_blank\"><b>Learn More</b></a>"
      }
    }
  ]
}